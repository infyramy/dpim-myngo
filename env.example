# =============================================================================
# myNGO Application Configuration
# =============================================================================

# Application Environment
NODE_ENV=production
VITE_ENVIRONMENT=production

# =============================================================================
# Server Configuration
# =============================================================================

# Frontend Configuration
FRONTEND_PORT=3000
FRONTEND_HOST=0.0.0.0

# Backend API Configuration  
API_PORT=3001
API_HOST=0.0.0.0
API_SERVER_PORT=3001
BACKEND_PORT=3001

# =============================================================================
# API URLs and CORS Configuration
# =============================================================================

# Frontend API URL (used by Vue app to connect to backend)
VITE_API_URL=https://api-myngo.0o0.my

# Production API URL (internal)
API_URL=https://api-myngo.0o0.my

# CORS Origins (comma-separated)
CORS_ORIGINS=https://myngo.0o0.my,https://api-myngo.0o0.my

# =============================================================================
# Database Configuration
# =============================================================================

DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=myngo_production

# Database URL (alternative format)
DATABASE_URL=mysql://root:password@localhost:3306/myngo_production

# =============================================================================
# Security Configuration
# =============================================================================

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_ACCESS_SECRET=your-super-secure-access-secret-change-this-in-production
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-change-this-in-production

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-change-this-in-production

# =============================================================================
# Email Configuration
# =============================================================================

# Email Service Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# =============================================================================
# External Services
# =============================================================================

# Analytics (Umami)
VITE_UMAMI_URL=https://your-umami-instance.com
VITE_UMAMI_WEBSITE_ID=your-website-id

# Google Analytics
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# =============================================================================
# Rate Limiting
# =============================================================================

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# File Upload Configuration
# =============================================================================

MAX_FILE_SIZE=10485760
UPLOAD_PATH=/uploads

# =============================================================================
# Coolify Specific Configuration
# =============================================================================

# Coolify assigns these automatically, but you can override
PORT=3000
INTERNAL_PORT=3000 