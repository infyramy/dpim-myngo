# =============================================================================
# üåç Frontend Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment
# All variables prefixed with VITE_ are available in the frontend

# -----------------------------------------------------------------------------
# üè¢ Application Configuration
# -----------------------------------------------------------------------------
VITE_APP_NAME=myNGO
VITE_APP_URL=https://app.example.com
VITE_ENVIRONMENT=production

# -----------------------------------------------------------------------------
# üîó API Configuration
# -----------------------------------------------------------------------------
# Backend API base URL (required)
VITE_API_URL=https://api.example.com

# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# Number of API request retries
VITE_API_RETRIES=3

# -----------------------------------------------------------------------------
# üìß Email Service Configuration
# -----------------------------------------------------------------------------
# Default sender email address
VITE_DEFAULT_FROM_EMAIL=no-reply@example.com

# Plunk API Key (optional)
VITE_PLUNK_API_KEY=

# Mailjet API credentials (optional)
VITE_MAILJET_API_KEY=
VITE_MAILJET_SECRET_KEY=

# -----------------------------------------------------------------------------
# üìä Analytics Configuration
# -----------------------------------------------------------------------------
# Umami analytics (optional)
VITE_UMAMI_WEBSITE_ID=
VITE_UMAMI_URL=

# -----------------------------------------------------------------------------
# üé® Feature Flags
# -----------------------------------------------------------------------------
# Enable/disable features (true/false)
VITE_FEATURE_DARK_MODE=true
VITE_FEATURE_MULTILINGUAL_SUPPORT=true
VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_ANALYTICS=false
VITE_FEATURE_ADMIN_DASHBOARD=true
VITE_FEATURE_USER_MANAGEMENT=true
VITE_FEATURE_EMAIL_SERVICE=false

# -----------------------------------------------------------------------------
# üåê Localization
# -----------------------------------------------------------------------------
# Default language (en, es)
VITE_DEFAULT_LANGUAGE=en

# Timezone
VITE_TIMEZONE=UTC

# Date format
VITE_DATE_FORMAT=MM/DD/YYYY

# Time format
VITE_TIME_FORMAT=HH:mm

# -----------------------------------------------------------------------------
# üîß Development Configuration (dev only)
# -----------------------------------------------------------------------------
# Port for development server (optional, defaults to 5173)
DEV_PORT=5173

# Port for production container (optional, defaults to 3000)
PORT=3000 