# üåê Universal Docker Environment Configuration
# Copy this file to .env and modify values as needed

# =============================================================================
# API Configuration
# =============================================================================
API_URL=http://localhost:3002
API_TIMEOUT=30000

# =============================================================================
# Docker Port Configuration
# =============================================================================
# Simple deployment port (Coolify, Railway, Render, etc.)
SIMPLE_PORT=3000

# Production nginx port
WEB_PORT=3100

# Development port (Vite default)
DEV_PORT=5173

# Backend/API port
API_PORT=3002

# =============================================================================
# Application Environment
# =============================================================================
NODE_ENV=production

# =============================================================================
# Build Arguments (Docker)
# =============================================================================
# Controls which deployment type to use
# Options: simple, production
DEPLOYMENT_TYPE=simple

# =============================================================================
# Vue.js Environment Variables (Build-time)
# =============================================================================
# These will be injected into the Vue.js build
VITE_API_URL=http://localhost:3002
VITE_APP_NAME=myNGO
VITE_APP_VERSION=1.0.0

# Authentication & Security
VITE_JWT_SECRET=your-super-secret-jwt-key-here
VITE_SESSION_TIMEOUT=3600000

# External Services (if applicable)
VITE_GOOGLE_CLIENT_ID=your-google-client-id
VITE_ANALYTICS_ID=your-analytics-id

# =============================================================================
# Database Configuration (Backend)
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/myngo_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=myngo_db
DATABASE_USER=myngo_user
DATABASE_PASSWORD=secure_password

# =============================================================================
# Email Configuration (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =============================================================================
# Docker Compose Project
# =============================================================================
COMPOSE_PROJECT_NAME=myngo

# Health check settings
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# =============================================================================
# Development Settings
# =============================================================================
# Debug mode
DEBUG=false

# Log level
LOG_LEVEL=info

# =============================================================================
# Platform-Specific Instructions
# =============================================================================
# 
# For Coolify:
# - Use default settings (DEPLOYMENT_TYPE=simple, port 3000)
# - Just connect repo and deploy!
#
# For Production VPS:
# - Set DEPLOYMENT_TYPE=production
# - Use WEB_PORT=3100
#
# For Railway/Render:
# - Use default settings (simple deployment)
# - Port will be auto-detected as 3000 